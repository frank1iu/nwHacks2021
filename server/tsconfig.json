{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "outDir": "./routes/",
        "allowJs": true,
        "esModuleInterop": true
    },
    "include": [
        "routes_src/*.ts",
        "routes_src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}